<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<section class="photoContainer">
  <% if @user[:picture].nil? || @user[:picture].empty? %>
    <div>
      <%= form_for(@user, url: 'profile_picture', html: { multipart: true }) do |f| %>
          <%= f.file_field :picture %>
          <%= f.submit "Upload", class: "btn btn-primary" %>
      <% end %>
    </div>
  <%else%>
    <%= image_tag current_user.picture.url, class: "profilePhoto"%> 
  <%end%>
</section><!--  WORK ON PHOTO UPLOAD!!! -->

    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %><br />
        <%= f.label :description %><br />
    <%= f.text_field :description, autofocus: true %><br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

      <%= f.label :school %><br />
  <%= f.text_field :school, autofocus: true %><br />
      <%= f.label :college %><br />
  <%= f.text_field :college, autofocus: true %><br />
      <%= f.label :state %><br />
  <%= f.text_field :state, autofocus: true %><br />
      <%= f.label :country %><br />
  <%= f.text_field :country, autofocus: true %>  <br />

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
